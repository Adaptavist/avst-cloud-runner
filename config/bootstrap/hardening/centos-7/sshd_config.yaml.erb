---
post_upload_commands:
    - if ! grep -q 'ClientAliveInterval 300' /etc/ssh/sshd_config; then echo 'ClientAliveInterval 300' >> /etc/ssh/sshd_config; fi
    - if ! grep -q 'ClientAliveCountMax 0' /etc/ssh/sshd_config; then echo 'ClientAliveCountMax 0' >> /etc/ssh/sshd_config; fi
    - if ! grep -q 'MaxAuthTries 4' /etc/ssh/sshd_config; then echo 'MaxAuthTries 4' >> /etc/ssh/sshd_config; fi
    - if ! grep -q 'Banner /etc/issue.net' /etc/ssh/sshd_config; then echo 'Banner /etc/issue.net' >> /etc/ssh/sshd_config; fi
    - if ! grep -q 'LoginGraceTime 60' /etc/ssh/sshd_config; then echo 'LoginGraceTime 60' >> /etc/ssh/sshd_config; fi
    - if ! grep -q 'X11Forwarding no' /etc/ssh/sshd_config; then echo 'X11Forwarding no' >> /etc/ssh/sshd_config; fi
    - /usr/bin/systemctl restart sshd
